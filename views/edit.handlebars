<div class="container">
    <div class="row">
        <div class="col-md-10 mx-auto text-left">
            <form class="createBlogPost" id="submitEdit">
                
                <div class="mt-5 mb-3">
                    <label for="titleInput" class="form-label">Title</label>
                    <input type="text" class="form-control" id="titleInput" maxlength="50" value="{{title}}" required />
                </div>
                
                <div class="mb-3">
                    <label for="bodyInput" class="form-label">Body</label>
                    <textarea class="form-control" id="bodyInput" rows="10" required>{{description}}</textarea>
                </div>
                
                <div class="text-center">
                    <button type="submit" class="mt-3 btn btn-dark btn-lg btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/submitNewEdit.js"></script>